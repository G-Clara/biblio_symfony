{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h3>Mon Profil</h3>

    {% if app.user %}
        {% if app.user.id == user.id %}
            <div>
                <h4>Bonjour {{user.username}}</h4>
                {% if is_granted('ROLE_ADMIN') %}
                    Administrateur
                {% elseif is_granted('ROLE_ORGANISATEUR') %}
                    Organisateur
                {% else %}
                    Utilisateur
                {% endif %}
                {# <p>{{user.roles ? user.roles|json_encode : ''}}</p> #}
            </div>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <th>Nom d'utilisateur</th>
                        <td>{{ user.username }}</td>
        {% else %}

        {% endif %}
    {% else %}

    {% endif %}

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier son profil</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
